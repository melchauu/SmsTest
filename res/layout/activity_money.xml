	        android:id="@+id/Contact_txt"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Contact" />
	      
	      <EditText 
	       	android:id="@+id/Contact_fill"
	       	android:inputType="textPersonName"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"  />
	      
